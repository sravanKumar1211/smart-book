{
  "version": 2,
  "buildCommand": "cd Frontend && npm install && npm run build && mkdir -p ../Backend/public && cp -r dist/* ../Backend/public/",
  "outputDirectory": "Backend/public",
  "installCommand": "cd Backend && npm install",
  "framework": null,
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api" },
    { "source": "/(.*)", "destination": "/api" }
  ],
  "functions": {
    "api/index.js": {
      "memory": 1024,
      "maxDuration": 30
    }
  }
}
